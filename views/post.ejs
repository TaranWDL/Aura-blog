<%- include("partials/header.ejs") %>

<link rel="stylesheet" href="../styles/main.css">

<h1><%= blog.title %></h1>
<p><%= blog.body %></p>

<button onclick="fetch('/posts/<%= blog.id %>', { method: 'DELETE'}) .then(response => {
    if (response.ok) {
        window.location.href = '/';
    }
    else {
        console.error('ERROR');
    }
})">Delete blog</button>

